<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Abreviado</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each_with_index do |city, index| %>
      <tr>
        <th scope="row"><%= index + 1%></th>
        <td><%= city.name %></td>
        <td><%= city.shortname %></td>
      </tr>
    <% end %>
  </tbody>
</table>